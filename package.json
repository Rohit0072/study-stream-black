{
  "name": "study-stream",
  "version": "1.0.0",
  "private": true,
  "main": "electron/dist/main.js",
  "author": "Study Stream",
  "description": "Offline-first educational video player",
  "scripts": {
    "dev": "concurrently -k \"npm run next:dev\" \"npm run electron:dev\"",
    "next:dev": "next dev",
    "electron:dev": "npm run electron:build && wait-on tcp:3000 && electron .",
    "electron:build": "tsc -p electron/tsconfig.json",
    "build": "next build && npm run electron:build",
    "start": "next start",
    "lint": "eslint",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.studystream.app",
    "productName": "Study Stream",
    "win": {
      "icon": "icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "files": [
      "out/**/*",
      "electron/dist/**/*",
      "package.json",
      "icons/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Rohit0072",
        "repo": "study-stream-black"
      }
    ]
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "driver.js": "^1.4.0",
    "electron-serve": "^3.0.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.23.26",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "openai": "^6.15.0",
    "plyr-react": "^6.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.27",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}